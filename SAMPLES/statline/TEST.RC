DEFINITION StatBarT;

CONST
  IDM_FILE_EXIT = 20001;
  
  IDM_STATUSBAR_FIRST  = 20101;
  IDM_STATUSBAR_SECOND = 20102;
  IDM_STATUSBAR_THIRD  = 20103;
  IDM_STATUSBAR_FOURTH  = 20104;
  
  IDM_TEXTHEIGHT_12    = 30112;
  IDM_TEXTHEIGHT_20    = 30120;
  
  IDM_STATUSBAR_UP     = 30201;
  IDM_STATUSBAR_DOWN   = 30202;
  
  IDM_SHOW_HEIGHT      = 30301;

RESOURCE

MENU Main
  POPUP "&File"
    MENUITEM "&Exit", IDM_FILE_EXIT
  END
  POPUP "&Statusbar"
    MENUITEM "&First",  IDM_STATUSBAR_FIRST
    MENUITEM "&Second", IDM_STATUSBAR_SECOND
    MENUITEM "&Third",  IDM_STATUSBAR_THIRD
    MENUITEM "F&ourth",  IDM_STATUSBAR_FOURTH
  END
  POPUP "&Texthöhe"
    MENUITEM "H_&12",     IDM_TEXTHEIGHT_12
    MENUITEM "H_&20",     IDM_TEXTHEIGHT_20
  END
  POPUP "&Position"
    MENUITEM "&Top",      IDM_STATUSBAR_UP
    MENUITEM "&Bottom",   IDM_STATUSBAR_DOWN
  END
  POPUP "Berechne"
    MENUITEM "&Höhe" ,    IDM_SHOW_HEIGHT
  END
END

END StatBarT.
